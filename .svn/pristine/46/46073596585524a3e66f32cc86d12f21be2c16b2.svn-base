<extend name="Public:layout" />
<block name="toptitle">
<li class="active"><a href="__MODULE__/User/index">会员管理</a></li>
<li class="active"><a href="__MODULE__/User/index">会员列表</a></li>
</block>	
<block name="main">
<div class="page-content">
	<div class="page-header">
		<h1>
			会员列表
			<small> <i class="icon-double-angle-right"></i>
				乐峰网会员详细信息
			</small>
		</h1>
	</div>
</div>
	<div class="row">
	<!-- <form action=""></form> -->
		<div id="bigdiv" class="col-xs-11">
			<div class="table-responsive">
				<table id="sample-table-1" class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th class="center">
								<label>
									<input type="checkbox" class="ace" id="setall"/>
									<span class="lbl"></span>
								</label>
							</th>
							<th>用户email</th>
							<th>昵称</th>
							<th>性别</th>
							<th>头像</th>
							<th>资金</th>
							<th>花粉</th>
							<th>登陆次</th>
							<th> <i class="icon-time bigger-110 hidden-480"></i>
								注册时间
							</th>
							<th class="hidden-480">状态</th>
							<th class="hidden-480">更多操作</th>
						</tr>
					</thead>
					<form id="allform">
					<tbody>
						<foreach name="user" item="vo">
						<tr>
							<td class="center">
								<label>
									<input type="checkbox" class="ace" set="id[]" name="id[]" value="{$vo.id}"/>
									<span class="lbl"></span>
								</label>
							</td>
							<td>
								<a id="seemore" href="javascript:;">{$vo.user_email}</a>
							</td>
							<td>{$vo.user_alias}</td>
							<td class="hidden-480">{$vo[user_sex]?'男':'女'}</td>
							<td><img src="__PUBLIC__/{$vo[user_pic]}" width="30" height="30"></td>
							<td>{$vo.user_money}</td>
							<td>{$vo.user_coin}</td>
							<td>{$vo.user_visitcount}</td>
							<td>{$vo.user_regtime|date="Y-m-d H:i:s",###}</td>
							<td>{$vo[is_delete]?'禁用':'未禁用'}</td>
							<td>
								<div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
									<a class="btn btn-xs btn-info" title="修改" href="__CONTROLLER__/save/id/{$vo.id}">
										<i class="icon-edit bigger-120"></i>
									</a>

									<a class="btn btn-xs btn-danger" del="{$vo.id}" title="删除">
										<i class="icon-trash bigger-120"></i>
									</a>

								</div>

								<div class="visible-xs visible-sm hidden-md hidden-lg">
									<div class="inline position-relative">
										<button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
											<i class="icon-cog icon-only bigger-110"></i>
										</button>

										<ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
											<li>
												<a href="#" class="tooltip-info" data-rel="tooltip" title="View">
													<span class="blue">
														<i class="icon-zoom-in bigger-120"></i>
													</span>
												</a>
											</li>

											<li>
												<a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
													<span class="green">
														<i class="icon-edit bigger-120"></i>
													</span>
												</a>
											</li>

											<li>
												<a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
													<span class="red">
														<i class="icon-trash bigger-120"></i>
													</span>
												</a>
											</li>
										</ul>
									</div>
								</div>
							</td>
						
						</tr>
						</foreach>
						<tr>
							<td class="center" colspan="12">
								<div class="col-xs-4 text-left">
									<input type="button" class="btn btn-xs btn-inverse" id="delall" value="批量删除">
								</div>
								<!-- 显示分页 -->
								<div class="col-xs-8 text-right">{$page}</div>
							</td>	
						</tr>
					</tbody>
					</form>
				</table>
			</div>
			<!-- /.table-responsive -->
		</div>

	</div>

	<!-- js 样式开始 -->
	<script>
	$(function(){
		$('a[del]').click(function(){
			var id = 'id='+$(this).attr('del');
			layer.confirm('您确定要删除吗？',function(){
				$.post('__CONTROLLER__/del',id,function(data){
					if(data == 1){
						layer.msg('删除成功！',1,function(){
							location.reload();
						});
					}else{
						layer.msg('删除失败！');
					}
				})
			})
		})
		// 全选
		var bool = true;
		$('#setall').click(function(){
			$(':checkbox[set]').each(function(){
				$(this).prop('checked',bool);
			})
			bool = !bool;
		})
		// 批量删除
		$('#delall').click(function(){
			var data = $('#allform').serialize();
			$.post('__CONTROLLER__/delall',data,function(data){
				if(data == 1){
					layer.msg('批量删除成功！',1,function(){
						location.reload(); //自动关闭后可做一些刷新页面等操作
					});
				}else{
					layer.msg('批量删除失败！',2,3);
				}
			})
		})
	})
	
	</script>
</block>