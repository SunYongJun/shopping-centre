<extend name="Public:layout" />
<block name="main">
	<div class="page-header">
		<h1>
			会员列表
			<small> <i class="icon-double-angle-right"></i>
				乐峰网会员详细信息
			</small>
		</h1>
	</div>
	<div class="row">
	<!-- <form action=""></form> -->
		<div id="bigdiv" class="col-xs-11">
			<div class="table-responsive">
				<table id="sample-table-1" class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th class="center">
								<label>
									<input type="checkbox" class="ace" />
									<span class="lbl"></span>
								</label>
							</th>
							<th>用户email</th>
							<th>昵称</th>
							<th>性别</th>
							<th>头像</th>
							<th>资金</th>
							<th>花粉</th>
							<th>等级</th>
							<th>登陆次数</th>
							<th> <i class="icon-time bigger-110 hidden-480"></i>
								注册时间
							</th>
							<th class="hidden-480">状态</th>
							<th class="hidden-480">更多操作</th>
						</tr>
					</thead>

					<tbody>
						<foreach name="user" item="vo">
						<tr>
					
							<td class="center">
								<label>
									<input type="checkbox" class="ace" />
									<span class="lbl"></span>
								</label>
							</td>
							<td>
								<a href="#">{$vo.user_email}</a>
							</td>
							<td>{$vo.user_alias}</td>
							<td class="hidden-480">{$vo[user_sex]?'男':'女'}</td>
							<td><img src="__PUBLIC__/{$vo[user_pic]}" width="30" height="30"></td>
							<!-- <td>{$vo.user_qq}</td> -->
							<!-- <td>{$vo.user_phone}</td> -->
							<td>{$vo.user_money}</td>
							<td>{$vo.user_coin}</td>
							<td><if condition="$vo.user_level eq 1">Super Boss <elseif condition="$vo.user_level eq 2" />Workers <else />Normal</if></td>
							<td>{$vo.user_visitcount}</td>
							<td>{$vo.user_regtime|date="Y-m-d H:i:s",###}</td>
							<td>{$vo[is_delete]?'禁用':'未禁用'}</td>
							<td>
								<div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
									<!-- <button class="btn btn-xs btn-success" title="删除">
										<i class="icon-ok bigger-120"></i>
									</button> -->

									<!-- <a class="btn btn-xs btn-warning" title="详细">
										<i class="icon-flag bigger-120"></i>
									</a> -->

									<a class="btn btn-xs btn-info" title="修改" href="__CONTROLLER__/save/id/{$vo.id}">
										<i class="icon-edit bigger-120"></i>
									</a>

									<a class="btn btn-xs btn-danger" del="{$vo.id}" title="删除">
										<i class="icon-trash bigger-120"></i>
									</a>

								</div>

								<div class="visible-xs visible-sm hidden-md hidden-lg">
									<div class="inline position-relative">
										<button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
											<i class="icon-cog icon-only bigger-110"></i>
										</button>

										<ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
											<li>
												<a href="#" class="tooltip-info" data-rel="tooltip" title="View">
													<span class="blue">
														<i class="icon-zoom-in bigger-120"></i>
													</span>
												</a>
											</li>

											<li>
												<a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
													<span class="green">
														<i class="icon-edit bigger-120"></i>
													</span>
												</a>
											</li>

											<li>
												<a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
													<span class="red">
														<i class="icon-trash bigger-120"></i>
													</span>
												</a>
											</li>
										</ul>
									</div>
								</div>
							</td>
						
						</tr>
						</foreach>
						<tr>
							<td class="center" colspan="12">
								<div class="col-xs-4 text-left">
									<input type="button" class="btn btn-xs btn-inverse" id="dels" value="批量删除">
								</div>
								<!-- 显示分页 -->
								<div class="col-xs-8 text-right">{$page}</div>
							</td>	
						</tr>
					</tbody>
				</table>
			</div>
			<!-- /.table-responsive -->
		</div>
		<!-- /span -->
<script type="text/javascript">
	if("ontouchend" in document) document.write("<script src='__PUBLIC__/admin/js/jquery.mobile.custom.min.js'>"+"<"+"/script>");</script>
<script src="__PUBLIC__/admin/js/bootstrap.min.js"></script>
<script src="__PUBLIC__/admin/js/typeahead-bs2.min.js"></script>
<script src="__PUBLIC__/admin/js/jquery-2.0.3.min.js"></script>

<!-- page specific plugin scripts -->

<script src="__PUBLIC__/admin/js/jquery.dataTables.min.js"></script>
<script src="__PUBLIC__/admin/js/jquery.dataTables.bootstrap.js"></script>

<!-- ace scripts -->

<script src="__PUBLIC__/admin/js/ace-elements.min.js"></script>


<!-- inline scripts related to this page -->

<script type="text/javascript">
			jQuery(function($) {
				var oTable1 = $('#sample-table-2').dataTable( {
				"aoColumns": [
			      { "bSortable": false },
			      null, null,null, null, null,
				  { "bSortable": false }
				] } );
				
				
				$('table th input:checkbox').on('click' , function(){
					var that = this;
					$(this).closest('table').find('tr > td:first-child input:checkbox')
					.each(function(){
						this.checked = that.checked;
						$(this).closest('tr').toggleClass('selected');
					});
						
				});
			
			
				$('[data-rel="tooltip"]').tooltip({placement: tooltip_placement});
				function tooltip_placement(context, source) {
					var $source = $(source);
					var $parent = $source.closest('table')
					var off1 = $parent.offset();
					var w1 = $parent.width();
			
					var off2 = $source.offset();
					var w2 = $source.width();
			
					if( parseInt(off2.left) < parseInt(off1.left) + parseInt(w1 / 2) ) return 'right';
					return 'left';
				}
			})
		</script>
	</div>
	<script>
	$(function(){
		$('a[del]').click(function(){
			var id = 'id='+$(this).attr('del');
			layer.confirm('您确定要删除吗？',function(){
				$.post('__CONTROLLER__/del',id,function(data){
					if(data == 1){
						layer.msg('删除成功！',1,function(){
							location.reload();
						});
					}else{
						layer.msg('删除失败！');
					}
				})
			})
		})
		// $('#dels').click(function(){
		// 	alert('#bigdiv.html()');
		// })


	})
	
	</script>
</block>