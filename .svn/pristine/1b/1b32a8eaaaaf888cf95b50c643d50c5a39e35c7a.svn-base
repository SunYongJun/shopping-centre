<?php

namespace Admin\Controller;

class ShippingController extends CommonController{
	public function index(){
		// 分配左侧菜单样式变量
        $this -> assign('menu','ShopConfig');
        $this -> assign('menuList','Shippingindex');

        $m = M(CONTROLLER_NAME);
		// 搜索条件
		if(I('get.keywords')){
			$keyword = I('get.keywords');
			$keyword = "shipping_name like '%".$keyword."%'";
		}else{
			$keyword = '';
		}
		
		$count = $m -> where($keyword) -> count();// 查询满足要求的总记录数

		// 调用自定义的分页
		$mypage = $this -> mypage($count,8);

		// 进行分页数据查询 注意limit方法的参数要使用Page类的属性
		$list = $m-> where($keyword)->order('id desc')->limit($mypage->firstRow.','.$mypage->listRows)->select();
		
		$show = $mypage->show();// 分页显示输出
		$this->assign('list',$list);// 赋值数据集
		$this->assign('page',$show);// 赋值分页输出


		$this -> display();
	}

	Public function add(){
		// 分配左侧菜单样式变量
        $this -> assign('menu','ShopConfig');
        $this -> assign('menuList','Shippingindex');
		$this -> display();
	}

	public function insert(){
		$link = M('shipping');

		if($_POST['shipping_name'] && $_POST['shipping_money']){
			
			$link -> create();
			if($link -> add()){
				echo 1;
			}else{
				echo 0;
			}
		}else{
			echo 0;
		}
	}

	public function edit(){
		// 分配左侧菜单样式变量
        $this -> assign('menu','ShopConfig');
        $this -> assign('menuList','Shippingindex');

		$id = $_GET['id'];
		$m = M(CONTROLLER_NAME);
		$link = $m -> find($id);
		$this -> assign('list',$link); 
		$this -> display();
	}
	//删除单个
	public function del(){
		$m = M(CONTROLLER_NAME);
		if($m -> where('id='.I('post.id')) -> delete()){
			echo 1;
		}else{
			echo 0;
		}
	} 
	//删除多个
	public function delall(){
		if(IS_AJAX){
			$ids = I('post.id');
			$ids = implode(',', $ids);
			$m = M(CONTROLLER_NAME);
			if($m -> delete($ids)){
				echo 1;
			}else{
				echo 0;
			}
		}
	}
	public function save(){
		$link = M(CONTROLLER_NAME);

		if($_POST['shipping_name'] && $_POST['shipping_money']){
			$link -> create();
			if($link -> save()){
				echo 1;
			}else{
				echo 0;
			}
		}else{
			echo 0;
		}
	}
}