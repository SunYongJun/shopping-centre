<extend name="Public:layout" />
<block name="main">
<!-- 添加文章分类 -->
<div class="page-content">
	<div class="page-header">
		<h1>
			评论管理
			<small>
				<i class="icon-double-angle-right"></i>
				回复评论
			</small>
		</h1>
	</div><!-- /.page-header -->
	<div class="row">
		<div class="col-xs-12">
			<!-- PAGE CONTENT BEGINS -->
			<form class="form-horizontal" action="__CONTROLLER__/replyInsert" role="form" method="post" id="addform">
			<input type="hidden" name="id" value="{$reply.id}">
				<div class="form-group">
					<label class="col-sm-3 control-label no-padding-right" for="form-field-1" > 商品评论 </label>

					<div class="col-sm-9">
						<textarea cols="50" rows="5" readonly>{$reply.comment_content}</textarea>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label no-padding-right" for="form-field-1" > 回复内容 </label>

					<div class="col-sm-9">
						<textarea id="reply" name="reply" cols="50" rows="5">请输入回复内容！</textarea>
					</div>
				</div>
				
				<div class="clearfix form-actions">
					<div class="col-md-offset-3 col-md-9">
						<button class="btn btn-info" type="submit" id="addtype" >
							<i class="icon-ok bigger-110"></i>
							修改
						</button>

						&nbsp; &nbsp; &nbsp;
						<button class="btn" type="reset">
							<i class="icon-undo bigger-110"></i>
							重置
						</button>
					</div>
				</div>
			</form>
		</div><!-- /.col -->
	</div><!-- /.row -->
	</div><!-- /.page-content -->
	<script>
	$(function(){
		$('#reply').focus(function(){
			if($(this).val() == '请输入回复内容！'){
				$(this).val('');
			}
		})
	})
	</script>
</block>