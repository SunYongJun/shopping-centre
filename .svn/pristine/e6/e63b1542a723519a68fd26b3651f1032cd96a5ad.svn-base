<extend name="Public:layout" />
<block name="cssjs">
	<link rel="stylesheet" href="__PUBLIC__/home/css/article.css">
</block>		
<block name="main">
	<div class="amain">
		<h1>{$art.article_title}</h1>
		<span>分类：<b>{$art.type_name}</b> 作者信息：<b>{$art.admin_name}</b> 发表时间：<b>[{$art.article_time|date='Y-m-d H:i:s',###}]</b> </span>
		<div class="con">
			{$art.article_content}
		</div>
	</div>
</block>