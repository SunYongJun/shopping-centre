<extend name="Public:layout" />
<block name="main">
	<div class="page-content">
		<div class="page-header">
			<h1>
				商品评价
				<small> <i class="icon-double-angle-right"></i>
					评价列表
				</small>
			</h1>
		</div>
		<div class="table-responsive">
			<table id="sample-table-1" class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th class="center">
							<label>
								<!-- <input type="checkbox" class="ace" />
								-->
								<span class="lbl"></span>
							</label>
						</th>

						<th>所属商品</th>
						<th class="hidden-480">评论人</th>
						<th>评论星级</th>
						<th style="width:40%">评论内容</th>
						<th>评论时间</th>
						<th class="hidden-480">状态</th>
						<th>操作</th>
					</tr>
				</thead>
				<form id="allform">
					<tbody>
						<foreach name="comment" item="vo">
							<tr>
								<td class="center">
									<label>
										<input type="checkbox" class="ace"  name="id[]" value="{$vo.id}"/>
										<span class="lbl"></span>
									</label>
								</td>

								<td>
									<span class="lbl">{$vo.goods_name}</span>

								</td>
								<td>
									<span class="lbl">{$vo.user_email}</span>
								</td>

								<td>{$vo.comment_rank}</td>
								<td>{$vo.comment_content}</td>
								<td>
									<span>{$vo.comment_time|date="Y-m-d H:i:s",###}</span>
								</td>

								<td>
									<span>{$vo['is_show'] ? '显示' : '不显示'}</span>
									<!-- <a href="__CONTROLLER__/edit/id/{$vo.id}">修改</a>
								-->
								</td>
								<td>
									<a href="javascript:;" show="{$vo.id}">{$vo['is_show'] ? '禁用' : '启用'}</a>|<a href="__CONTROLLER__/delete/id/{$vo.id}">删除</a>
								</td>
							</tr>
						</foreach>
						<tr>
							<td class="center" colspan="9">
								<div class="col-xs-1 text-left">
									<input class="btn btn-xs btn-inverse" id="setall"  value=" 全 选 " type="button">
								</div>
								<div class="col-xs-1 text-left">
									<input class="btn btn-xs btn-inverse" id="against"  value=" 反 选 " type="button">
								</div>
								<div class="col-xs-1 text-left">
									<input class="btn btn-xs btn-inverse" id="delall" value="批量删除" type="button">
								</div>
								
								<!-- 显示分页 -->
								<div class="col-xs-9 text-right">{$page}</div>
							</td>	
						</tr>
					</tbody>
				</form>
			</table>
		</div>
		<script>
		$(function() {
			$('a[show]').bind('click',function() {
				var id = $(this).attr('show');
				var $th = $(this);
				var $sp = $th.parent().prev().children('span');
				$.post('__CONTROLLER__/save',{id:id,show:1},function(data){
					if($th.html() == '禁用') { 
						$th.html("启用");
						$sp.html('不显示')
						 }else{ 
						 	$th.html("禁用");
						 	$sp.html('显示');
						 };

				})
			})

			//全选	
			var bool = true;		
			$('#setall').bind('click',function() {				
				$('input[name="id[]"]').each(function() {
					$(this).prop('checked',bool);					
				})
				bool = !bool;
			})

			//反选
			$('#against').bind('click',function() {
				$('input[name="id[]"]').each(function() {
					$(this).prop('checked',!$(this).prop('checked'));					
				})
			})

			//批量删除
			$('#delall').bind('click',function() {
				var data = $('#allform').serialize();
				if(!confirm('确定要删除么？')) return;
				$.post('__CONTROLLER__/delall',data,function(data) {				
					if(data){
						layer.msg('批量删除成功！',1,function(){
							location.reload();
						});
					}else{
						layer.msg('批量删除失败！',2,3);
					}				
				})
			})
			
			
		})
		</script>
</block>