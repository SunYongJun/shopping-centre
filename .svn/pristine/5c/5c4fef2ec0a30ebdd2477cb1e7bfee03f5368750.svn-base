<script>
    $(function(){

        //取消收藏事件
        $('a[del]').bind('click',function(){
            var $gid = $(this).attr('del');
             layer.confirm('你确定取消收藏吗？',function(index){
                layer.close('index');
                $.post('__CONTROLLER__/cancel',{gid:$gid},function(data){
                    if(data){
                           layer.msg('取消成功'); 
                           window.location.reload();
                        
                    }else{
                         layer.msg('取消收藏失败',1,2);
                    }
                });        
            })
            // alert($(this).attr('del'));
        })
    })
</script>
