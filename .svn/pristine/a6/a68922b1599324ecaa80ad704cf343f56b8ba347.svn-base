		public function inform_doit(){
			// 
			if(IS_AJAX){
				// var_dump($_POST);
				$id = $_SESSION['user']['id'];
				$user = D('user');
				$data = $_POST;
				if(!$user->create($data)){
					exit($user->getError());
				}else{
					$map = 'id='.$id;
					$r = $user->where($map)->save();
					if($r){
						$datas['status']=1;
						$datas['content']='修改成功';
						$datas['url'] = U('Center/index');
						$rr = $user->find($id);
						
						$_SESSION['user'] = $rr;
					}else{
						$datas['status']=0;
						$datas['content']='修改失败';

					}

				}
				$this -> ajaxReturn($datas);
			}
		}
