//自定义layar方法，Ajax调用时使用

// 加载layer库
document.write("<script src='__PUBLIC__/layer/layer.min.js'>"+"<"+"script>");

function mylayer(type,msg,time,icons){
	if(type == 1){
		// 提示信息
		layer.msg(msg,time,icons);
	}else if(type == 2){
		layer.confirm(msg,time);
	}else{
		layer.alert(msg,icons);
	}
}