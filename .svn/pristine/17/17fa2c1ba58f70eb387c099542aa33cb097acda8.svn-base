<extend name="Public:layout" />
<block name="toptitle">
<li class="active"><a href="__MODULE__/Shipping/index">配送方式列表</a></li>
<li class="active"><a href="__MODULE__/Shipping/add">添加配送方式</a></li>
</block>
<block name="main">
<!-- 添加文章分类 -->
<div class="page-content">
	<div class="page-header">
		<h1>
			配送方式管理
			<small>
				<i class="icon-double-angle-right"></i>
				添加配送方式
			</small>
		</h1>
	</div><!-- /.page-header -->
	<div class="row">
		<div class="col-xs-12">
			<!-- PAGE CONTENT BEGINS -->
			<form class="form-horizontal" action="__CONTROLLER__/insert" enctype="multipart/form-data" role="form" method="post" id="addform">
				<div class="form-group">
					<label class="col-sm-3 control-label no-padding-right" for="form-field-1" > 配送方式名称 </label>

					<div class="col-sm-9">
						<input type="text" id="form-field-1" placeholder="请输入配送方式名字。" class="col-xs-10 col-sm-5" name="shipping_name" required/><span class="text-danger" style="display:none">请输入配送方式名称！</span>
					</div>
				</div>
				
				<div class="form-group">
					<label class="col-sm-3 control-label no-padding-right" for="form-field-1" > 配送方式描述 </label>

					<div class="col-sm-9">
						<input type="text" id="form-field-1" placeholder="请输入简单描述。" class="col-xs-10 col-sm-5" name="shipping_desc"/><span class="text-danger" style="display:none">请输入配送方式描述！</span>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label no-padding-right" for="form-field-1" > 配送金额 </label>

					<div class="col-sm-9">
						<input type="number" id="form-field-1" placeholder="请输入金额。" class="col-xs-10 col-sm-5" name="shipping_money"/><span class="text-danger" style="display:none">请输入配送金额！</span>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label no-padding-right" for="form-field-2"> 是否可用 </label>
					<div class="col-xs-3">
						<div class="radio">
							<label>
							<input name="is_status" type="radio" class="ace" value="1" checked>
							<span class="lbl">可用</span>
							</label>
							<label>
							<input name="is_status" type="radio" class="ace" value="0">
							<span class="lbl">禁用</span>
							</label>
						</div>
					</div>
				</div>

				<div class="clearfix form-actions">
					<div class="col-md-offset-3 col-md-9">
						<button class="btn btn-info" type="button" id="addtype" >
							<i class="icon-ok bigger-110"></i>
							提交
						</button>

						&nbsp; &nbsp; &nbsp;
						<button class="btn" type="reset">
							<i class="icon-undo bigger-110"></i>
							重置
						</button>
					</div>
				</div>
			</form>
		</div><!-- /.col -->
	</div><!-- /.row -->
	</div><!-- /.page-content -->
	<script>
	$(function(){
		//验证表单
		$('input[name="shipping_name"]').focus();
		$('input[name="shipping_name"]').blur(function(){
			if($(this).val() == ''){
				$(this).focus().next().show();
			}else{
				$(this).next().hide();
			}
		})
		$('input[name="shipping_desc"]').blur(function(){
			if($(this).val() == ''){
				$(this).focus().next().show();
			}else{
				$(this).next().hide();
			}
		})
		$('input[name="shipping_money"]').blur(function(){
			if($(this).val() == ''){
				$(this).focus().next().show();
			}else{
				$(this).next().hide();
			}
		})
    	$('#addtype').click(function(){
    		if($('input[name="shipping_name"]').val() && $('input[name="shipping_money"]').val()){
    			var data = $('#addform').serialize();
    			$.post('__CONTROLLER__/insert',data,function(data){
				if(data == 1){
					// alert('success');
					layer.msg('添加成功！',2,function(){
						location.href = '__CONTROLLER__/index';
					});
				}else{
					layer.msg('添加失败！',2,3);
					// alert('error');
				}
			})
    		}else{
    			layer.msg('请输入链接名字及链接地址！',2,3);
    		}
    	})
		/*$('#addtype').click(function(){

			var data = $('#addform').serialize();
			$.post('__CONTROLLER__/insert',data,function(data){
				if(data == 1){
					// alert('success');
					layer.msg('添加成功！',2,1);
				}else{
					layer.msg('添加失败！',2,3);
					// alert('error');
				}
			})
		})*/
	})
</script>
</block>