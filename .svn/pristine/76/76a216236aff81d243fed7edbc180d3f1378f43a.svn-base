<extend name="Public:layout" />
<block name="toptitle">
<li class="active"><a href="__MODULE__/Order/index">订单管理</a></li>
</block>
<block name="main">
<div class="page-content">
	<div class="page-header">
		<h1 id="dianji">
			订单列表
		</h1>
	</div><!-- /.page-header -->
	<!-- 搜索条 -->
	<div class="col-xs-4 col-sm-7"></div>
	<form action="">
	<div class="col-xs-4 col-sm-5 text-right" style="margin-bottom:10px">
		<div class="input-group">
			<input type="text" class="form-control search-query" placeholder="输入关键字" name="keywords">
			<span class="input-group-btn">
			<button type="submit" class="btn btn-purple btn-sm">
				搜索
				<i class="icon-search icon-on-right bigger-110"></i>
			</button>
			</span>
		</div>
	</div>
	</form>
	<!-- 搜索条结束 -->
	<div class="row">
		<div class="col-xs-12">
			<!-- PAGE CONTENT BEGINS -->

			<div class="row">
				<div class="col-xs-12">
					<div class="table-responsive">
						<table id="sample-table-1" class="table table-striped table-bordered table-hover">
							<thead>
								<tr>
									<th class="center">
										<label>
											<input type="checkbox" class="ace" id="setall">
											<span class="lbl"></span>
										</label>
									</th>
									<th>序号</th>
									<th>订单号</th>
									<th>下单人/时间</th>
									<th>收货人/电话</th>
									<th>总金额</th>
									<th>订单状态</th>
									<th>操作</th>
								</tr>
							</thead>
							<form id="allform">
							<tbody>
							<foreach name="list" item="vo">
								<tr>
									<td class="center">
										<label>
											<input type="checkbox" class="ace" set="id[]" name="id[]" value="{$vo.id}">
											<span class="lbl"></span>
										</label>
									</td>
									<td>{$vo.id}</td>
									<td>{$vo.action_sn}</td>
									<td>{$vo.action_time}{$vo.user_id}</td>
									<td>{$vo.address_id}</td>
									<td>{$vo.action_count}</td>
									<td class="hidden-480">
									{$vo.action_status}
									{$vo.pay_status}
									{$vo.shipping_status}
									</td>
									<td>
										<div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
											<button class="btn btn-xs btn-success" title="确认订单">
												<i class="icon-ok bigger-120"></i>
											</button>
											<button class="btn btn-xs btn-danger" title="删除订单">
												<i class="icon-trash bigger-120"></i>
											</button>
											<button class="btn btn-xs btn-warning" title="查看详细">
												<i class="icon-flag bigger-120"></i>
											</button>				
										</div>

									</td>
								</tr>
								</foreach>
								<tr>
									<td class="center" colspan="8">
										<div class="col-xs-4 text-left">
											<input type="button" class="btn btn-xs btn-inverse" id="delall" value="删除">
										</div>
										<!-- 显示分页 -->
										<div class="col-xs-8 text-right">{$page}</div>
									</td>	
								</tr>
							</tbody>
						</form>
						</table>
					</div><!-- /.table-responsive -->
				</div><!-- /span -->
			</div><!-- /row -->
		</div><!-- /.col -->
	</div><!-- /.row -->
</div>
<script src="__PUBLIC__/admin/js/jquery-2.0.3.min.js"></script>
<script>
	$(function(){
		// 弹出框添加数据
		$('#addtype').click(function(){
			var data = $('#addform').serialize();
			$.post('__CONTROLLER__/insert',data,function(data){
				if(data == 1){
					layer.msg('添加成功！',1,function(){
						location.reload(); //自动关闭后可做一些刷新页面等操作
					});
				}else{
					layer.msg('添加失败！',2,3);
				}
			})
		})
		// 单个删除按钮删除数据
		$('a[del]').click(function(){
			var id = 'id='+$(this).attr('del');
			layer.confirm('确定删除吗？',function(){
				$.post('__CONTROLLER__/del',id,function(data){
					if(data == 1){
						layer.msg('删除成功！',1,function(){
							location.reload(); //自动关闭后可做一些刷新页面等操作
						});
					}else{
						layer.msg('删除失败！',2,3);
					}
				});
			});
		})
		// 全选
		var bool = true;
		$('#setall').click(function(){
			$(':checkbox[set]').each(function(){
				$(this).prop('checked',bool);
			})
			bool = !bool;
		})
		// 批量删除
		$('#delall').click(function(){
			var data = $('#allform').serialize();
			$.post('__CONTROLLER__/delall',data,function(data){
				if(data == 1){
					layer.msg('批量删除成功！',1,function(){
						location.reload(); //自动关闭后可做一些刷新页面等操作
					});
				}else{
					layer.msg('批量删除失败！',2,3);
				}
			})
		})
	})
</script>
</block>