<?php
namespace Admin\Controller;

class UserController extends CommonController{
	public function index(){
		$user = M('user');
		$users=$user->select();
		$this->assign('user',$users);
		$this -> display();
	}

	// 添加用户
	public function add(){
	
		$this -> display();
	}

	// 执行添加用户
	public function insert(){
		$user = D('user');
			$_POST['user_pwd'] = md5($_POST['user_pwd']);
			$_POST['re_user_pwd'] = md5($_POST['re_user_pwd']);
			$data = $_POST;
			$data['user_regtime'] = time();
			// var_dump($data);exit();
			if (!$user->create($data)){ 
				exit($user->getError());

			}else{
				if($user->add()){
					$this->success('恭喜添加成功','index');
				}else{
					$this->error('添加失败！');
				}
			}

			
				// $user->create($data);
				
			}
			
		

	// 修改用户
	public function save(){
		$user = M('user');
		if(IS_GET){
			$map['id'] = array('eq',$_GET['id']);
			$data = $user->where($map)->select();
			$this -> assign('user',$data[0]);
		}
		$this -> display();
	}

	// 执行修改
	public function save_doit(){
		$user = D('user');
		// var_dump($user);exit();
		if(IS_POST){
			if(!$user->create()){
				exit($user->getError());
			}else{
				$map= 'id='.$_POST['id'];

				if($user->where($map)->save()){
					$this->success('修改成功','index');
				}else{
					$this->error('修改失败');
				};
			}		
		}		

	}

	// 单条删除用户
	public function del(){
		$user = M('user');
		$map = 'id='.I('post.id');
		$users = $user->where($map)->delete();
		if($users){
			echo 1;
		}else{
			echo 2;
		}
	}
}