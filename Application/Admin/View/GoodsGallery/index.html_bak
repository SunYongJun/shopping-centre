<extend name="Public:layout" />
<block name="main">

	<div class="page-content">
		<div class="page-header">
			<h1>
				商品相册
				<small> <i class="icon-double-angle-right"></i>
					相册展示
				</small>
			</h1>
		</div>
		<!-- /.page-header -->
		<a href="__CONTROLLER__/add/id/{$Think.get.id}">
			<button class="btn btn-info">添加图片</button>
		</a>
		<div class="row">

			<div class="col-xs-12">
				<!-- PAGE CONTENT BEGINS -->

				<div class="row-fluid">
					<ul class="ace-thumbnails">
						<foreach name="goods" item="vo">
							
								<li>
									<foreach name="vo.img_url" item="vi">
										<a href="__PUBLIC__/{$vi}" data-rel="colorbox">
											<img alt="相册图片" src="__PUBLIC__/{$vi}" height="250" class="mar5"/>
										</a>
										
									</foreach>
									<div class="text">
											<div class="inner">{$vo.img_desc}</div>
									</div>
								</li>
							
						</foreach>
					</ul>

				</div>
				<!-- PAGE CONTENT ENDS -->

			</div>
			<!-- /.col -->

		</div>
		<!-- /.row -->

	</div>
	<!-- /.page-content -->

	<!-- /.main-content -->
</block>
